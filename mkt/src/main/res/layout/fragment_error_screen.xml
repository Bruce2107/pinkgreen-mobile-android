<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/mkt_error_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:text="@string/error_title"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/mkt_error_vertical_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/mkt_error_vertical_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/mkt_error_horizontal_guideline_start" />


    <Button
        android:id="@+id/mkt_error_try_again"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondary_variant"
        android:textColor="@color/text"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/mkt_error_horizontal_guideline_end"
        app:layout_constraintEnd_toStartOf="@+id/mkt_error_vertical_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/mkt_error_vertical_guideline_start"
        android:text="@string/try_again" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mkt_error_vertical_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mkt_error_vertical_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mkt_error_horizontal_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mkt_error_horizontal_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="60dp" />


</androidx.constraintlayout.widget.ConstraintLayout>